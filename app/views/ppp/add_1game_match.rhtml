<div class="add1GameMatch">
<% form_for :match, :url => {:action => :create_1game_match } do |form| %>
    <div class="title">Winner:</div>
    <p>
        <div class="playerChooser"><%= form.select :winner, @players %></div>
        <div class="scores"><%= form.text_field :winner_score1, :size => 3 %>
        </div>
    </p>

    <p>
        <div class="title">Loser:</div>
    </p>
    <p>
        <div class="playerChooser"><%= form.select :loser, @players %></div>
        <div class="scores"><%= form.text_field :loser_score1, :size => 3 %>
        </div>
    </p>
    <p><%= submit_tag %></p>
<% end %>
</div>
